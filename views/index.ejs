<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <div class="container">
      <h1 class="logo"></h1>
      <nav>
        <ul>
          <li><a href="/auth/login">Login</a></li>
          <li><a href="/auth/register">Register</a></li>
        </ul>
      </nav>
    </div>
  </header>
  
  <h1 class="title">Notes</h1>
  <div class="addbtn"><button><a href="/add"> + New Note</a></button></div>
  <ul class="note-list">
    <% notes.forEach(note => { %>
      <div>
        <p class="title" style="font-size: 3.4rem; margin: 0"><%=note.creator%>'s Note</p>
        <li class="note">
          <h2><%= note.title %></h2>
          <p><%= note.content %></p>
          <div class="actions">
            <a href="<%= note.url %>">View</a>
          </div>
        </li>
      </div>
    <% }) %>
  </ul>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav>
    <button><a href="/auth/login">Login</a></button>
    <button><a href="/auth/register">Register</a></button>
  </nav>
  <h1>Notes</h1>
  <a href="/add">Add New Note</a>
  <ul>
    <% notes.forEach(note => { %>
      <li>
        <h2><%= note.title %></h2>
        <p><%= note.content %></p>
        <a href="/edit/<%= note._id %>">Edit</a>
        <a href="/delete/<%= note._id %>">Delete</a>
      </li>
    <% }) %>
  <!--Thiáº¿u Share-->
  </ul>
</body>
</html>

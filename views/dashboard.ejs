<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <nav>
            <button><a href=""><%= user.username %></a></button>
        </nav>
          <h1>Your Notes</h1>
          <a href="/add">Add New Note</a>
          <ul>
            <% notes.forEach(note => { %>
              <li>
                <h2><%= note.title %></h2>
                <p><%= note.content %></p>
                <a href="/edit/<%= note._id %>">Edit</a>
                <a href="/delete/<%= note._id %>">Delete</a>
                <a href="/share/<%= note._id %>?iv=<%= encodeURIComponent(note.iv) %>">Share</a>
              </li>
            <% }) %>
          </ul>
          <h1>Shared Notes</h1>
          <ul>
            <% sharedNotes.forEach(note => { %>
              <li>
                  <h2><%= note.title %></h2>
                  <p><%= note.content %></p>
                  <p><%= note.iv %></p>
                  <p><%= note.url %></p>
                  <a href="<%= note.url %>">View</a>
              </li>
            <% }) %>
          </ul>
    </div>
</body>
</html>
